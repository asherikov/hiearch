digraph state_machine_example {
compound=true;
rankdir=TB;
style="rounded, filled";
fillcolor="#fafafa";
choice1 [shape=diamond, style=filled, fillcolor=black, width=0.3, height=0.3, label=""];
start [shape=circle, style=filled, fillcolor=black, width=0.3, height=0.3, fixedsize=true, label=""];
end1 [shape=doublecircle, style=filled, fillcolor=black, color=black, fontcolor=black, width=0.2, height=0.2, fixedsize=true, label=""];
state1 [shape=rectangle, style="rounded,filled", fillcolor="#f0f8ff", peripheries=1, label=state1];
join2 [shape=rectangle, style=filled, fillcolor=black, width=1.0, height=0.05, fixedsize=true, label=""];
fork1 [shape=rectangle, style=filled, fillcolor=black, width=1.0, height=0.05, fixedsize=true, label=""];
state2 [shape=rectangle, style="rounded,filled", fillcolor="#f0f8ff", peripheries=1, label=state2];
end2 [shape=doublecircle, style=filled, fillcolor=black, color=black, fontcolor=black, width=0.2, height=0.2, fixedsize=true, label=""];
node [fontsize=12, fontname=Helvetica, margin=0.1];
edge [fontsize=10, fontname=Helvetica, arrowsize=0.8];
start -> choice1 [label="from start\nto choice"];
choice1 -> join2 [label="from choice\nto join"];
choice1 -> end2 [label="from choice\nto end"];
choice1 -> fork1 [label="from choice\nto fork"];
join2 -> end1 [label="from join\nto end"];
state1 -> end1 [label="from state\nto end"];
fork1 -> state1 [label="from fork\nto state"];
state2 -> join2 [label="from state\nto join"];
fork1 -> state2 [label="from fork\nto state"];
}
